-#coding: utf-8

!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    =stylesheet_link_tag 'bootstrap.min', 'bootstrap-responsive.min', 'common', 'wiki'
    =javascript_include_tag 'jquery', 'jquery-ujs', 'bootstrap.min', 'bootstrap-dropdown', 'application', 'buttons'
  %body
    .navbar.navbar-inverse.navbar-fixed-top.topbar
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{:'data-toggle'=>'collapse', :'data-target'=>'.nav-collapse'}
            %span.icon-bar
          %a.brand daphne
          .nav-collapse.collapse
            =partial 'parts/header_menu'
    #wrap.container-fluid
      -if logged_in?
        .row-fluid
          =partial 'parts/sidebar'
          .span9
            =breadcrumbs
            =flash_tag :success, :class=>'text-success'
            =flash_tag :info, :class=>'text-info'
            =flash_tag :error, :class=>'text-error'
            =flash_tag :warning, :class=>'text-warning'
            -if !@project.nil? || (!@issue.nil? && !@issue.project.nil?)
              =partial 'parts/project_nav', :locals=>{:project=>@project || @issue.project}
            =yield
      -else
        .row-fluid
          =yield
    =partial 'parts/issue_form'
