!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    =stylesheet_link_tag 'bootstrap.min', 'bootstrap-responsive.min', 'common'
    =javascript_include_tag 'jquery', 'jquery-ujs', 'bootstrap.min', 'application'
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{:'data-toggle'=>'collapse', :'data-target'=>'.nav-collapse'}
            %span.icon-bar
          %a.brand daphne
          .nav-collapse.collapse
            %ul.nav
              %li
                %a{href: '/'}Home
              %li
                -if login?
                  %a{href: '#'}=current.name
                -else
                  %a{href: '/auth/twitter'}Login
    #wrap.container
      .row
        =flash_tag :notice, :class=>'text-info'
      =yield

