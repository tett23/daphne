-# coding: utf-8

#issue-form.modal.hide.fade{:role=>'dialog', :tabindex=>'-1', :'aria-labelledby'=>'issue-form', :'aria-hidden'=>true}
  =form_for :issue, url(:issues, :create) do |f|
    .modal-header
      %button.close{:type=>'button', :'data-dismiss'=>'modal', :'aria-hidden'=>true}×
      %h3
        新規issue発行
    .modal-body
      =f.text_area :body, :value=>'', :id=>:issue_new_header
    .modal-footer
      %a.btn{:href=>'#', :'data-dismiss'=>'modal', :'aria-hidden'=>'true'} close
      =f.submit 'save', :class=>'btn btn-primary'
