-# coding: utf-8

:coffeescript
  $ ->
    $('#issue_body_full').keydown (e) ->
      if e.ctrlKey && e.keyCode == 13 # ctrl+enter
        console.log e.ctrlKey, e.keyCode
        $('#issue-edit-form').submit()

%fieldset
  %legend Issue
  %div
    =f.text_area :body, :value=>@issue.text, :id=>:issue_body_full
  =f.submit pat(:save), :class => 'btn btn-primary'
  =f.submit pat(:cancel), :onclick => "window.location='#{url(:root, :index)}';return false", :class => :btn
